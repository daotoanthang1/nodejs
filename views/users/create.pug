extends ../layout/common
block content
    h1 Welcome to My Creation of Decoration

    if errors
        each error in errors
            .alert.alert-danger= error      
    form(action="/users/create",method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text",name="name",value ? values.name : "")
            label(for="phone") Phone
            input#phone.form-control.mb-3(type="number",name="phone" , value ? values.phone : "")
            button.btn.btn-secondary Create
