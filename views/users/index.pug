extends ../layout/common
block content
    h1
        span.mr-3 Users
        a.btn.btn-primary(href="/users/create") New
    .d-flex.align-items-center
        form.mx-auto(action="/users/search",method="GET",class="d-flex")
            input(type="text",name="q",class = "form-control mr-5")
            button(class="btn btn-primary ") search

    table.table     
        tr
            th Name 
            th Phone
            th Actions
        each user in users 
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href='/users/' + user.id) View